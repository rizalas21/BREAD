<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title> BREAD (Browse, Read, Edit, Add, Delete)</title>
    <link rel="stylesheet" href="/css/style.css">
    <script src="/js/util.js"></script>
</head>

<body>
    <h2>SQLite BREAD(Browse, Read, Edit, Add, Delete)</h2>
    <!-- ini fitur search -->
    <form action="/" method="get" class="add-container">
        <label for="name" >Name</label>
        <input type="text" class="add-box" name="name" placeholder="insert your name" value="<%= query.name %>" />

        <label for="height">Height</label>
        <input type="number" class="add-box" name="height" placeholder="insert your height"
            value="<%= query.height %>" />

        <label for="weight">Weight</label>
        <input type="number" step="0.0001" class="add-box" name='weight' placeholder="insert your weigth"
            value="<%= query.weight %>" />

        <label for="birthdate">Birth Date</label>
        <input type="date" class="add-box" name='startdate' placeholder="yyyy/mm/dd" value="<%= query.startdate %>" />
        s.d
        <input type="date" class="add-box" name='enddate' placeholder="yyyy/mm/dd" value="<%= query.enddate %>" />

        <label for="married">Is Married</label>
        <%if(query.married=='1' ){ %>
            <select name="married" id="married">
                <option disabled>-select married-</option>
                <option value="1" selected>Yes</option>
                <option value="0">No Yet</option>
            </select>
            <% } else if (query.married=='0' ){ %>
                <select name="married" id="married">
                    <option disabled>-select married</option>
                    <option value="1">Yes</option>
                    <option value="0" selected>Not Yet</option>
                </select>
                <% } else {%>
                    <select name="married" id="married">
                        <option disabled selected>-select married-</option>
                        <option value="1">Yes</option>
                        <option value="0">Not Yet</option>
                    </select>
                    <% } %>

        <legend>Operation</legend>
            <% if(query.type_search=='OR' ) { %>
                <input type="radio" id="OR" name="type_search" value="OR" checked= />OR
                <input type="radio" id="AND" name="type_search" value="AND" />AND

            <% }else if(query.type_search=='AND' ) { %>
                <input type="radio" id="OR" name="type_search" value="OR" />OR
                <input type="radio" id="AND" name="type_search" value="AND" checked>AND
            <% }else { %>
                <input type="radio" id="OR" name="type_search" value="OR"  />OR
                <input type="radio" id="AND" name="type_search" value="AND" />AND
            <% } %>

            <!-- trakhir submit mahh -->
        <button type="submit" class="add-submit">search</button>&nbsp;
        <a class="add-cancel" href="/">reset</a>
    </form>

    <!-- search SELESAI -->
    <a href="/add" class="list-create">Create</a>
    <table>
        <thead>
            <tr>
                <th>No.</th>
                <th>Name</th>
                <th>Height</th>
                <th>Weight</th>
                <th>Birthdate</th>
                <th>Married</th>
                <th>Update</th>
            </tr>
        </thead>
        <tbody>
            <% data.forEach((siswa, index)=> { %>
                <tr>
                    <td>
                        <%= index + offset + 1 %>
                    </td>
                    <td>
                        <%= siswa.name %>
                    </td>
                    <td>
                        <%= siswa.height %>
                    </td>
                    <td>
                        <%= siswa.weight %>
                    </td>
                    <td>
                        <%= siswa.birthdate %>
                    </td>
                    <td>
                        <%= siswa.married ? 'Yes' : 'Not Yet' %>
                    </td>
                    <td><a href="/edit/<%= siswa.id %>">Update</a>&nbsp;<a href="/delete/<%= siswa.id %>"
                            onclick="return confirmation('<%= siswa.name %>')">Delete</a></td>
                </tr>
                <% }) %>
        </tbody>
    </table>
    <% for(let i=1; i <=pages; i++){%>
        <a href="/?page=<%= i %>">
            <%= i %>
        </a>
        <% } %>
</body>

</html>