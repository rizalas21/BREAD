<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Tambah Data</title>
    <link rel="stylesheet" href="/css/style.css">
</head>

<body>
    <div class="container-add">
        <div class="container-add-sec">
            <h1>Adding Data</h1>
            <form action="/add" method="post" class="add-container">
                <div class="inline">
                    <label for="name">Name</label>
                    <input type="text" class="add-box" name="name" placeholder="insert your name" required />
                </div>

                <div class="inline">
                    <label for="height">Height</label>
                    <input type="number" class="add-box" name="height" placeholder="insert your height" required />
                </div>

                <div class="inline">
                    <label for="weight">Weight</label>
                    <input type="number" step="0.0001" class="add-box" name='weight' placeholder="insert your weigth"
                        required />
                </div>


                <div class="inline">
                    <label for="birthdate">Birth Date</label>
                    <input type="date" class="add-box" name='birthdate' placeholder="dd/mm/yyyy" required />
                </div>
                <div class="container-married">
                    <legend for="married">Is Married</legend>
                    <% if(!dataGet.married) { %>
                        <div class="married1">
                            <div class="married-option">
                                <input type="radio" name="married" id="false" value="0" required checked>
                                <label for="false">Not Yet</label>
                            </div>
                            
                            <div class="married-option">
                                <input type="radio" name="married" id="true" value="1">
                                <label for="true">Yes</label>
                            </div>
                        </div>

                        <% } else {%>
                            <div class="married1">
                                <div class="married-option">
                                    <input type="radio" name="married" id="false" value="0">
                                    <label for="false">Not Yet</label>
                                </div>
                                
                                <div class="married-option">
                                    <input type="radio" name="married" id="true" value="1">
                                    <label for="true"> Yes</label>
                                </div>
                            </div>
                            <% } %>
                </div>
                <div class="button-add">
                    <button type="submit" class="add-submit">Save</button>&nbsp;<a class="add-cancel" href="/">Back</a>
                </div>
            </form>
            
        </div>
    </div>
</body>

</html>